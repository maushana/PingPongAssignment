<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "PingPongPlayers")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Ping Pong Player Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.balloon.js"></script>
    <script>
        var msgArr = ["Please give me another chance!", "I promise to practice more and get better!", "Ok, if you insist."];
        var msgCnt = 0;
        var width = $(document).width() - 1000;
        var height = $(document).height() - 400;

        function run() {
            var top = (Math.random() * height) + 'px';
            var left = (Math.random() * width) + 'px';
            var pos = 'absolute';
            var strMsg = msgArr[msgCnt];

            msgCnt++;
            if (msgCnt >= msgArr.length) {
                top = 'auto'; left = 'auto'; pos = 'relative';
            }
            $('#btnDelete').css({ 'position': pos, 'top': top, 'left': left, 'zIndex': 10000 });
            $('#btnDelete').showBalloon({
                position: "top",
                contents: strMsg,
                css: {
                    fontSize: '150%',
                    fontWeight: 'bold',
                    lineHeight: '3',
                    backgroundColor: '#888',
                    color: '#fff'
                }
            });
            setTimeout(() => {
                $('#btnDelete').hideBalloon();
            }, 1200);
        }
        function resetButton() {
            msgCnt = 0;
            $('#btnDelete').css({ 'position': 'relative', 'top': 'auto', 'left': 'auto' });
        }

        $(document).ready(function () {
            $('#btnDelete').mouseover(run);
        });
    </script>
</body>
</html>
